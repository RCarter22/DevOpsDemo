<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
 "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.ui.templateDir" value="template" />
	<constant name="struts.ui.templateSuffix" value="ftl" />
	<constant name="struts.custom.i18n.resources" value="package" />	
	<constant name="struts.convention.action.includeJars" value=".*?/ezmaxmobile-core*.*?jar(!/)?" />
	<constant name="struts.convention.result.path" value=""/>
	<!-- Max file size in bytes (default: 10 MB)-->
	<constant name="struts.multipart.maxSize" value="10485760"/>
	
	<!-- Begin of constants for weblogic -->
	<!-- uncomment for weblogic deployment -->
	
	<constant name="struts.convention.action.disableJarScanning" value="true"/>
	<constant name="struts.convention.action.fileProtocols" value="jar,zip" />
	<constant name="struts.convention.action.includeJars" value=".*?/_wl_cls_gen.*?jar(!/)?" />
	<constant name="struts.convention.result.path" value=""/>
	
	<!-- End of constants for weblogic -->
	
	<package name="mydefault" extends="struts-default">
		<global-results>
			<result name="error">/error/error.jsp</result>
			<result name="unauthorized">/error/error401.jsp</result> 
		</global-results>
	</package>
	
	<package name="admin" extends="struts-default">
		<global-results>
			<result name="error">/error/error.jsp</result>
			<result name="unauthorized">/error/error401.jsp</result>
			<result name="unknown" type="chain">
				<param name="actionName">exception</param>
				<param name="namespace">/exception</param>
			</result> 
		</global-results>
		
		<global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="unknown" />
            <exception-mapping exception="java.lang.NullPointerException" result="unknown" />
            <exception-mapping exception="java.rmi.RemoteException" result="unknown" />
            <exception-mapping exception="psdi.util.MXException" result="unknown" />            
        </global-exception-mappings>		
	</package>	
</struts>
